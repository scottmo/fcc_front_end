mixin navitem(href, text)
  li(data-toggle="collapse" data-target=".in")
    a.page-scroll(href= href)
      | #{text}

mixin project(heading, link, img_src, footer)
  .thumbnail.panel.grid-item(class!=attributes.class)
    a(href=link target="_blank")
      img(src=img_src)
    .caption
      h4= heading
      p= footer

mixin contact(link, icon_class, text)
  a(href=link target="_blank")
    i(class="fa fa-" + icon_class)
  if (text)
    |  #{text}

